<Page x:Class="Store.Acc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Acc">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="img\acc.png" Grid.Row="1" Grid.Column="1"/>

        
        <TextBlock x:Name="fioTb" FontSize="24" HorizontalAlignment="Center"  Grid.Row="3" Grid.Column="1"/>
       
        <TextBlock x:Name="nameTb" FontSize="24" HorizontalAlignment="Center" 
Grid.Row="4" Grid.Column="1"/>
       
        <TextBlock x:Name="emailTb" FontSize="24" HorizontalAlignment="Center" 
Grid.Row="5" Grid.Column="1"/>
       
        <Button Content="История заказов" Background="MediumVioletRed" Foreground="White" Width="200" FontSize="20" FontWeight="Bold"  Margin="10" Grid.Row="6" Grid.Column="2" Click="Button_Click" />


    </Grid>
</Page>
