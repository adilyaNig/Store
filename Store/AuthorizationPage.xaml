<Page x:Class="Store.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="img\acc.png" Grid.Row="1" Grid.Column="1"/>
        <TextBox Name="loginTb" Grid.Column="1" Grid.Row="3" Margin="10" FontSize="25"/>
        <PasswordBox Name="passwordTb" Grid.Column="1" Grid.Row="5" Margin="10" FontSize="25"/>

        <TextBlock Text="Логин" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
        <TextBlock Text="Пароль" Margin="6" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>

        <Button Content="Войти" Background="DeepPink" FontWeight="Bold" Foreground="White" FontSize="25" Grid.Row="6" Grid.Column="1" Margin="10 20 10 5" Click="loginBtn_Click"/>
        <Button Content="Нет аккаунта?" Background="White" Width="200" FontWeight="Bold" Foreground="DeepPink" FontSize="25" Grid.Row="7" Grid.Column="2" Margin="10 5 10 20" Click="regButton_Click"/>


        
    </Grid>
</Page>
